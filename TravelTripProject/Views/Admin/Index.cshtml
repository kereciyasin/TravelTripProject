@model List<TravelTripProject.Models.Blog>
@{
    ViewBag.Title = "Blog List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Blog List</h2>
        <a href="/Admin/AddBlog" class="btn btn-success">+ Add New Blog</a>
    </div>

    <table class="table table-bordered table-hover text-center">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Delete</th>
                <th>Update</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blog in Model)
            {
                <tr>
                    <td>@blog.Id</td>
                    <td>@blog.Title</td>
                    <td>
                        <a href="/Admin/DeleteBlog/@blog.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this blog?')">Delete</a>
                    </td>
                    <td>
                        <a href="/Admin/Edit/@blog.Id" class="btn btn-warning btn-sm">Update</a>
                    </td>
                    <td>
                        <a href="/Admin/BlogDetails/@blog.Id" class="btn btn-light btn-sm">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
