
@model List<TravelTripProject.Models.Comment>
@{
    ViewBag.Title = "Comment List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">All Comments</h2>

    <table class="table table-bordered table-hover text-center">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Blog Title</th>
                <th>Username</th>
                <th>Email</th>
                <th>Comment</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model)
            {
                <tr>
                    <td>@comment.Id</td>
                    <td>@comment.Blog?.Title</td>
                    <td>@comment.Username</td>
                    <td>@comment.Email</td>
                    <td>@comment.Content</td>
                    <td>@comment.Date.ToShortDateString()</td>
                    <td>
                        <a href="/Admin/EditComment/@comment.Id"
                           class="btn btn-warning btn-sm">
                            Update
                        </a>
                        <a href="/Admin/DeleteComment/@comment.Id"
                           class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this comment?')">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
