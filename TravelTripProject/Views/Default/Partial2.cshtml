@model List<TravelTripProject.Models.Blog>


<div class="right">
    @foreach (var item in Model)
    {
        <div class="bot-left">
            <img src="@item.ImageUrl" alt="" />
        </div>
        <div class="left-text">
            <h4>@item.Title</h4>
            <span class="doller">@item.Date.ToString("dd.mm.yyyy")</span>
            <p>@item.Description.Substring(0, 50)</p>
            <p>
                <a href="/Blog/BlogDetails/@item.Id"><span class="read">Read More >></span></a>
            </p>
        </div>
    }
</div>